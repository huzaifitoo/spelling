<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Spelling">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_850_common_words"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/learn_spelling_of_80_of_the_words_children_use_in_their_writing"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent level"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="16sp"/>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_marginHorizontal="5dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="5dp"
               android:orientation="horizontal">


           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=" Level 1(Grade 1)"
               android:textStyle="bold"
               android:layout_marginTop="10dp"
               android:textSize="18sp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="man,this,may"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="5dp"
                   android:textSize="14sp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Status"
                   android:layout_marginStart="5dp"
                   android:textStyle="bold"
                   android:layout_marginBottom="15dp"
                   android:layout_marginTop="10dp"
                   android:textSize="16sp"/>

           </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginStart="30dp">

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="33dp"
                           android:text="Time Spent"
                           android:gravity="center"
                           android:padding="7dp"
                           android:background="@drawable/timespent"
                           android:layout_marginTop="15dp"
                           android:textSize="14sp"/>

                       <LinearLayout
                           android:layout_width="40dp"
                           android:layout_marginTop="15dp"
                           android:layout_height="wrap_content"
                           android:background="@drawable/timer"
                           android:orientation="vertical">

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:text="0"
                               android:gravity="center"
                               android:textColor="@color/white"
                               android:textSize="14sp" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Min"
                               android:gravity="center"
                               android:textColor="@color/white"
                               android:textSize="10sp"
                              />

                       </LinearLayout>

                   </LinearLayout>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="30dp"
                       android:text="Incomplete"
                       android:textSize="14sp"
                       android:padding="5dp"
                       android:background="@drawable/forbtn"
                       android:textColor="@color/white"
                       android:layout_marginTop="30dp"/>


               </LinearLayout>

           </LinearLayout>


       </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPELLING (150+LEVELS)"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_spelling"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/item_layout"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>